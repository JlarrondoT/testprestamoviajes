function setCuotasSlider(){
  slider = document.getElementById("range-slider__range_1").value;
  sliderFormat = Intl.NumberFormat('es-CL').format(slider)
  document.getElementById("form-control-ncuotas").value = sliderFormat;
  /*console.log(slider);*/
}

